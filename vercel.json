{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/next"
		},
		{
			"src": "backend/express/index.ts",
			"use": "@vercel/bun"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "backend/express/index.ts"
		},
		{
			"src": "/(.*)",
			"dest": "frontend/$1"
		}
	],
	"env": {
		"FRONTEND_URL": "https://your-frontend-url.vercel.app"
	},
	"build": {
		"env": {
			"NEXT_PUBLIC_BACKEND_URL": "https://your-backend-url.vercel.app/api"
		}
	}
}
